{
  "name": "backend-portfolio",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "start:dev": "NODE_ENV=development nodemon",
    "start:production": "NODE_ENV=production && yarn tsc",
    "prettier:check": "prettier --config .prettierrc.js --check \"*/**/*.{ts,tsx,js,jsx,json,sass,scss,css,html,md}\"",
    "prettier:fix": "yarn prettier:check --write",
    "prettier:fix-all": "yarn prettier:check --write",
    "precommit:check": "yarn prettier:fix-all",
    "heroku-postbuild": "NODE_ENV=production && yarn install && yarn tsc"
  },
  "husky": {
    "hooks": {
      "pre-push":"yarn prettier:fix"
    }
  },
  "dependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.8",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.1",
    "@types/socket.io": "^2.1.11",
    "@types/yup": "^0.29.8",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-expeditious": "^5.1.1",
    "express-graphql": "^0.11.0",
    "global": "^4.4.0",
    "graphql": "^15.3.0",
    "husky": "^4.3.0",
    "mongoose": "^5.10.9",
    "nodemailer": "^6.4.13",
    "nodemailer-mailgun-transport": "^2.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "socket.io": "^2.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "yup": "^0.29.3"
  }
}
